<h1> Editing Book </h1>

<%= form_with model: @book do |f| %>
<div class="box-title">
  <h5>Title</h5>
  <%= f.text_field :title %></br>
</div>
  
<div class="box-body">
  <h5>Body</h5>
  <%= f.text_area :body %> 
</div>

<div>
  <%= f.submit 'Update Book' %>
  <% end %>
<div>

<div>
  <%= link_to 'Show', book_path(@book.id) %> |
